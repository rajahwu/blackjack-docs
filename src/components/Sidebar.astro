---
const links = [
  { href: "/blackjack", label: "Overview" },
  { href: "/blackjack/phrasebook", label: "Phrasebook" },
  { href: "/blackjack/drills", label: "Drills" },
  { href: "/blackjack/troubleshooting", label: "Troubleshooting" },
  { href: "/blackjack/trainer-notes", label: "Trainer Notes" },
];
---

<aside style="width: 220px; padding: 1rem; border-right: 1px solid #ccc;">
  <nav>
    <ul style="list-style: none; padding: 0; margin: 0;">
      {links.map(link => (
        <li style="margin-bottom: 0.5rem;">
          <a href={link.href} style="text-decoration: none; color: #333;">
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</aside>
