---
const { title } = Astro.props<{ title?: string }>;
const year = new Date().getFullYear();
import Sidebar from "../components/Sidebar.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | Blackjack Manual` : "Blackjack Manual"}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body style="margin: 0; font-family: sans-serif;">
    <header style="padding: 1rem; border-bottom: 1px solid #ccc;">
      <h1 style="margin: 0; font-size: 1.25rem;">
        <a href="/" style="text-decoration: none; color: inherit;">
          Blackjack Training Manual
        </a>
      </h1>
    </header>

    <div style="display: flex; min-height: 80vh;">
      <Sidebar />
      <main style="flex: 1; padding: 2rem; max-width: 800px;">
        <slot />
      </main>
    </div>

    <footer style="padding: 1rem; border-top: 1px solid #ccc; text-align: center; font-size: 0.9rem; color: #666;">
      Â© {year} Blackjack Docs
    </footer>
  </body>
</html>